<UserControl x:Class="IdeaV0.SideBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdeaV0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="5" BorderBrush="CadetBlue">
        <StackPanel Name="Bar" VerticalAlignment="Stretch">
           <!-- <ScrollViewer> -->
                <Button Click="LinkToAppHome" Margin="0,0,0,5">Home</Button>
                <WrapPanel Name="SearchPanel" Margin="5">
                    <TextBox Name="SearchFieldTextBox" MinWidth="100" MaxHeight="20"></TextBox>
                    <Button Margin="5,0,0,0">Search</Button>
                </WrapPanel>
                <Separator/>
           <!-- </ScrollViewer> -->
        </StackPanel>
    </Border>
</UserControl>
