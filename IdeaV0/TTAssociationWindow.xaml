<Window x:Class="IdeaV0.TTAssociationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdeaV0"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Height="300" Width="300">
    <WrapPanel Orientation="Vertical" Margin="10" Name="Panel">
        <TextBlock Name="InstructionBlock"/>
        <ListView Name ="TopicsListView" SelectionMode="Multiple"></ListView>
        <WrapPanel>
            <Button Name="ConfirmButton" Click="ConfirmButton_Clicked"/>
            <Button Name="CancelButton" Click="CancelButton_Clicked">Cancel</Button>
        </WrapPanel>
        <TextBlock Visibility="Collapsed"/>
    </WrapPanel>
</Window>
